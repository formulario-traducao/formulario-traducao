    <script>
        document.getElementById('eventoForm').addEventListener('submit', function(e) {
            e.preventDefault();
            
            const idiomas = [];
            document.querySelectorAll('input[id^="idioma"]:checked').forEach(cb => {
                idiomas.push(cb.value);
            });

            const preocupacoes = [];
            document.querySelectorAll('input[id^="preoc"]:checked').forEach(cb => {
                preocupacoes.push(cb.value);
            });

            const formData = {
                nome: document.getElementById('nome').value,
                email: document.getElementById('email').value,
                whatsapp: document.getElementById('whatsapp').value,
                empresa: document.getElementById('empresa').value,
                tipoEvento: document.getElementById('tipoEvento').value,
                dataEvento: document.getElementById('dataEvento').value,
                numParticipantes: document.getElementById('numParticipantes').value,
                idiomas: idiomas.join(', ') || 'n√£o informado',
                experiencia: document.querySelector('input[name="experiencia"]:checked')?.value || 'n√£o informado',
                preocupacoes: preocupacoes.join(', ') || 'nenhuma marcada',
                observacoes: document.getElementById('observacoes').value
            };

            const subject = `[AVALIA√á√ÉO] Tradu√ß√£o Simult√¢nea - ${formData.nome}`;
            const body = `
SOLICITA√á√ÉO DE AVALIA√á√ÉO - TRADU√á√ÉO SIMULT√ÇNEA

DADOS DO SOLICITANTE:
Nome: ${formData.nome}
Email: ${formData.email}
WhatsApp: ${formData.whatsapp}
Empresa/Institui√ß√£o: ${formData.empresa || 'n√£o informado'}

DADOS DO EVENTO:
Tipo: ${formData.tipoEvento}
Data Prevista: ${formData.dataEvento}
N¬∫ de Participantes: ${formData.numParticipantes || 'n√£o informado'}

REQUISITOS T√âCNICOS:
Idiomas Necess√°rios: ${formData.idiomas}
Experi√™ncia Anterior: ${formData.experiencia}

PREOCUPA√á√ïES:
${formData.preocupacoes}

DETALHES E EXPECTATIVAS:
${formData.observacoes || 'Nenhum detalhe adicional informado'}

---
Enviado via formul√°rio de avalia√ß√£o
            `;

            const mailtoLink = `mailto:redatoraon@gmail.com?subject=${encodeURIComponent(subject)}&body=${encodeURIComponent(body)}`;
            window.location.href = mailtoLink;

            document.getElementById('eventoForm').style.display = 'none';
            document.getElementById('successMessage').style.display = 'block';

            setTimeout(() => {
                document.getElementById('eventoForm').reset();
                document.getElementById('eventoForm').style.display = 'block';
                document.getElementById('successMessage').style.display = 'none';
            }, 5000);
        });
    </script>
